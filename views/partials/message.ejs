<div class="message">
    <div class="message-top">
        <div class="message-board">
            <a href=<%= message.board.url %> >
                b/<%= message.board.name %>
            </a>
        </div>
        <div class="message-creator">
            Posted By - 
            <% if (user) { %>
                <a href=<%= message.user.url %> >
                    <%= message.user.name %>
                </a>    
            <% } else { %>
                Anonymous
            <% }; %>
                
        </div>
    </div>
    <div class="message-bottom">
        <h3 class="message-title">
            <%= message.title %>
        </h3>
        <p class="message-message">
            <%= message.message %>
        </p>    
    </div>
</div>